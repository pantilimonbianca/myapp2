<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/box_one_text"
        style="@style/StyleCenterTitle"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_title_size"
        android:layout_marginTop="312dp"
        android:text="@string/hello_world"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_one"
        style="@style/buttonStyle"
        android:layout_height="wrap_content"
        android:text="@string/cliccami"
        android:textSize="@dimen/button_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box_one_text"
        app:layout_constraintVertical_bias="0.346" />

    <ImageView
        android:id="@+id/imageAnimeView"
        android:layout_width="@dimen/image_size_w"
        android:layout_height="@dimen/image_size_h"
        android:layout_marginStart="4dp"
        android:layout_marginTop="76dp"
        android:contentDescription="@string/animeview"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:textAlignment="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anime_giapponese_png" />

    <Button
        android:id="@+id/button_for_list"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/lista_anime"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_one" />


</androidx.constraintlayout.widget.ConstraintLayout>