<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="232dp"
        android:text="@string/indietro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/box_one_secondFragment"
        android:layout_width="162dp"
        android:layout_height="57dp"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="144dp"
        android:text="Ops! Qualcosa è andato storto...    :("
        android:textAlignment="center"
        android:textColor="#FB1302"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box_second_secondFragment"
        android:layout_width="284dp"
        android:layout_height="57dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        android:text="La preghiamo a riprevare più tardi"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_one_secondFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>